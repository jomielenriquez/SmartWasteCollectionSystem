@using SmartWasteCollectionSystem.Models
@model ListScreenModel<EmailSearchModel>
@{
    ViewData["Title"] = "Email Screen";
}

<Custom:ActionItems caption="Emails"
                    template="Default"
                    id="Email"
                    table="EmailID"
                    controller="Email"
                    delete-action="Delete"
                    edit-action="EmailEdit">
</Custom:ActionItems>

<Custom:SearchForm id="EmailSearchForm"
                   controller="Email"
                   action="EmailSearch">
    <Custom:TextBox id="Title"
                    label="Title"
                    type="text"
                    value="@Model.SearchModel.Title"
                    placeholder="Enter announcement title">
    </Custom:TextBox>
</Custom:SearchForm>

<div class="table-responsive">
    <Custom:Table id="EmailID"
                  items="Model.Data"
                  count="Model.DataCount"
                  page="Model.PageMode"
                  selection-mode="Multiple"
                  property="EmailId"
                  route="/Email/EmailListScreen"
                  url="/Email/EmailEdit?EmailId="
                  column=1>
        <Table:Column property="Title" caption="Email Title"></Table:Column>
        <Table:Column property="Recipients" caption="Recipient(s)"></Table:Column>
        <Table:Column property="IsSent" caption="Sent"></Table:Column>
        <Table:Column property="SentDate" caption="Sent Date"></Table:Column>
        <Table:Column property="CreatedDate" caption="Created Date"></Table:Column>
    </Custom:Table>
</div>
